{
    "name": "frontend-starter-kit",
    "version": "3.3.0",
    "author": "Eli Van Zoeren <eli@elivz.com>",
    "homepage": "https://elivz.com/",
    "license": "MIT",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git@github.com:elivz/FrontendStarterKit.git"
    },
    "scripts": {
        "dev": "yarn run blendid",
        "watch": "yarn run blendid",
        "build": "yarn run blendid build",
        "production": "yarn run blendid build",
        "lint": "yarn run blendid lint-js"
    },
    "engines": {
        "node": ">=6.0.0"
    },
    "dependencies": {
        "accessible-toggle": "^1.1.1",
        "lazysizes": "^4.0.0"
    },
    "devDependencies": {
        "babel-loader": "^7.1.2",
        "babel-preset-env": "^1.5.1",
        "blendid": "https://github.com/elivz/blendid.git",
        "eslint-config-prettier": "^2.6.0",
        "eslint-plugin-import": "^2.6.0",
        "eslint-plugin-prettier": "^2.1.2",
        "gulp-eslint": "^4.0.0",
        "gulp-postcss": "^7.0.0",
        "postcss-assets": "^5.0.0",
        "prettier": "^1.5.2"
    },
    "target": {
        "browsers": [
            "last 2 versions",
            "> 0.5% in US",
            "> 2%"
        ]
    },
    "babel": {
        "presets": [
            [
                "env",
                {
                    "modules": false
                }
            ]
        ]
    },
    "eslintConfig": {
        "env": {
            "es6": true,
            "browser": true
        },
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "plugins": [
            "prettier",
            "import"
        ],
        "parserOptions": {
            "ecmaVersion": 2017,
            "sourceType": "module"
        },
        "rules": {
            "curly": "error",
            "indent": [
                "error",
                4
            ],
            "no-console": "off",
            "no-else-return": "error",
            "no-inner-declarations": "off",
            "no-var": "error",
            "prefer-arrow-callback": "error",
            "prefer-const": "error",
            "prettier/prettier": "error",
            "strict": "error",
            "quotes": [
                "error",
                "single",
                {
                    "allowTemplateLiterals": true
                }
            ]
        }
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5"
    }
}
